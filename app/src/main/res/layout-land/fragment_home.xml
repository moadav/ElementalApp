<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/welcometext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yourbmi"
            android:layout_marginVertical="40dp"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/welcometext"
            tools:ignore="MissingConstraints"
            />
        <TextView
            android:id="@+id/healthyresult"
            android:layout_marginVertical="20dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/yourbmi"
            />


        <Spinner
            android:id="@+id/myspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:backgroundTint="@color/black"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/healthyresult"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="53dp" />



        <TextView
            android:id="@+id/calorie"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/getCalorie"
            />

        <Button
            android:id="@+id/getCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="60dp"
            android:text="@string/get_goals"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myspinner" />


    </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>